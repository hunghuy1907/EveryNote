<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="1.7"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:paddingTop="200dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/icon_app" />

        <TextView
            android:textColor="#2935e4"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:text="Lưu trữ và bảo vệ tài khoản của bạn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:layout_width="match_parent"
        >


        <TextView
            android:id="@+id/txt_contact_google"
            android:textColor="#2935e4"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Đăng kí miễn phí"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/edt_email"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/edt_pass_google"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#8385ef"
            android:text="Tiếp tục" />

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="15dp"
            android:text="-------------------- hoặc --------------------"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>